{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        "--require",
        "ts-node/register",
        "${workspaceFolder}/test/**/*.test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "PORT": "8081"
      }
    }
  ]
}
